<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/list_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/main_activity_text_style"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/featured_margin"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/featured_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        tools:text="Top Podcasts"/>

    <TextView
        android:id="@+id/see_all_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@id/list_title"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginRight="@dimen/featured_margin"
        android:layout_marginEnd="@dimen/featured_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:text="@string/see_all"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorAccent"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/album_recycler_view"
        android:layout_below="@id/list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/genre_text_bottom_padding"
        android:layout_marginLeft="@dimen/album_right_margin"
        android:layout_marginStart="@dimen/album_right_margin"
        android:scrollbars="horizontal"/>

</RelativeLayout>