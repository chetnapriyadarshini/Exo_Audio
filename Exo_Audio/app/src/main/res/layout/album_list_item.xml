<?xml version="1.0" encoding="utf-8"?>
    <!-- A CardView that contains a TextView -->
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="@dimen/podcast_album_width"
    android:layout_height="@dimen/podcast_album_height"
    android:layout_marginRight="@dimen/album_right_margin"
    android:layout_marginEnd="@dimen/album_right_margin"
    card_view:cardCornerRadius="4dp"
    android:elevation="@dimen/cardview_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/album_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            tools:background="@drawable/placeholder"/>

        <TextView
            android:id="@+id/album_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:maxLength="@integer/max_podcast_title_length"
            android:textColor="@color/black"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            tools:text="Religion &amp; Spirituality"/>

        <TextView
            android:id="@+id/album_artist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:maxLength="@integer/max_podcast_title_length"
            android:textColor="@color/black"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            tools:text="Religion &amp; Spirituality"/>
    </LinearLayout>


    </android.support.v7.widget.CardView>