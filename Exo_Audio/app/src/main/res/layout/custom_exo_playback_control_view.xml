<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="bottom"
    android:background="#CC000000"
    android:orientation="vertical"
    android:gravity="center"
    android:layoutDirection="ltr">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="4dp"
        android:orientation="horizontal">

        <ImageButton android:id="@+id/btn_rew"
            android:contentDescription="@string/exo_controls_rewind_description"
            style="@style/ExoMediaButton.Rewind"/>

        <ImageButton android:id="@+id/btn_play"
            style="@style/ExoMediaButton"/>

        <ImageButton android:id="@+id/btn_ffwd"
            android:contentDescription="@string/exo_controls_fastforward_description"
            style="@style/ExoMediaButton.FastForward"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView android:id="@+id/tv_time_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingTop="4dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:textColor="#FFBEBEBE"/>

        <SeekBar android:id="@+id/seek_mediacontroller_progress"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="32dp"
            android:contentDescription="@string/seek_episode"
            style="?android:attr/progressBarStyleHorizontal"/>

        <TextView android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingTop="4dp"
            android:paddingEnd="4dp"
            android:paddingStart="4dp"
            android:textColor="#FFBEBEBE"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="4dp"
        android:orientation="horizontal">

        <ImageButton android:id="@+id/btn_prev"
            android:contentDescription="@string/exo_controls_previous_description"
            style="@style/ExoMediaButton.Previous"/>

        <TextView
            android:id="@+id/tv_speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            style="@style/Base.TextAppearance.AppCompat.Headline"
            android:textColor="@android:color/white"
            android:contentDescription="@string/custom_action_speed"
            android:textStyle="bold"
            tools:text="1.00x"/>

        <ImageButton android:id="@+id/btn_next"
            android:contentDescription="@string/exo_controls_previous_description"
            style="@style/ExoMediaButton.Next"/>

    </LinearLayout>

</LinearLayout>
