<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_audio_controls"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/surface_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </SurfaceView>
    <android.support.v7.widget.AppCompatSeekBar
        android:id="@+id/seek_audio"
        android:layout_width="match_parent"
        android:layout_height="@dimen/seek_bar_height"
        android:contentDescription="@string/seek_podcast"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <ImageButton
            android:id="@+id/prev_audio"
            android:layout_width="@dimen/play_icon_size"
            android:layout_height="@dimen/play_icon_size"
            android:src="@android:drawable/ic_media_previous"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:contentDescription="@string/rewind_podcast"/>

        <ImageButton
            android:id="@+id/rewind_audio"
            android:layout_width="@dimen/play_icon_size"
            android:layout_height="@dimen/play_icon_size"
            android:src="@android:drawable/ic_media_rew"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:contentDescription="@string/rewind_podcast"/>

        <ImageButton
            android:id="@+id/play_audio"
            android:layout_width="@dimen/play_icon_size"
            android:layout_height="@dimen/play_icon_size"
            android:src="@android:drawable/ic_media_play"
            android:contentDescription="@string/play_podcast"/>

        <ImageButton
            android:id="@+id/forward_audio"
            android:layout_width="@dimen/play_icon_size"
            android:layout_height="@dimen/play_icon_size"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:src="@android:drawable/ic_media_ff"
            android:contentDescription="@string/advance_podcast"/>

        <ImageButton
            android:id="@+id/next_audio"
            android:layout_width="@dimen/play_icon_size"
            android:layout_height="@dimen/play_icon_size"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:src="@android:drawable/ic_media_next"
            android:contentDescription="@string/advance_podcast"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:orientation="horizontal">

        <TextView android:id="@+id/time_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingTop="4dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:textColor="#FFBEBEBE"
            tools:text="00:22:11"/>


        <TextView android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="14sp"
            android:textStyle="bold"
            android:paddingTop="4dp"
            android:paddingEnd="4dp"
            android:paddingStart="4dp"
            android:textColor="#FFBEBEBE"
            tools:text="/1:00:00"/>

    </LinearLayout>

    </LinearLayout>

</FrameLayout>