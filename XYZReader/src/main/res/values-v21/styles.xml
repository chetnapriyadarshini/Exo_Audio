<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Bacon" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:windowContentTransitions">true</item>

    </style>

    <style name="Theme.Bacon.Detail" parent="Theme.Bacon">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowEnterTransition">@transition/details_window_enter_transition</item>
        <item name="android:windowReturnTransition">@transition/details_window_return_transition</item>
        <!--
        <item name="android:windowEnterTransition">@transition/slide_in</item>-->
    </style>
</resources>